{
  "extends": "./tsconfig.settings",
  "include": [
    "./.storybook/**/*",
    "./exports",
    "./package.json",
    "./package.config.ts",
    "./scripts",
    "./src",
    "./stories",
    "./test",
    "./typings",
    "./vitest.config.ts",
    "./workshop",
    "./workshop.config.ts",
    "./workshop.runtime.ts"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/types",
    "paths": {
      "$workshop": ["./workshop"],
      "@sanity/ui/*": ["./exports/*"],
      "@sanity/ui": ["./exports"]
    },
    // Setting "jsx" to aynthing but "preserve" is usually incorrect, but at the moment Storybook needs it
    "jsx": "react-jsx",
    "resolveJsonModule": true
  }
}
