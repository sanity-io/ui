{
  "extends": "./tsconfig.settings",
  "include": [
    "./.storybook",
    "./figma",
    "./package.config.ts",
    "./scripts",
    "./src",
    "./stories",
    "./test",
    "./typings",
    "./workshop.config.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "./dist/types",
    "module": "ES2020",
    "jsx": "react-jsx",
    "paths": {
      "@sanity/ui": ["./src"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@figma"]
  }
}
