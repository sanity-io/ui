{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/__fixtures__",
    "**/__mocks__",
    "**/__workshop__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "./build"
  ],
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "rootDir": "../..",
    "outDir": "./build/ide",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "$packages": ["./packages"]
    }
  }
}
