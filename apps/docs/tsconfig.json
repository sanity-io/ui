{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["./build"],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "rootDir": ".",
    "outDir": "./build/ide",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "$packages": ["./packages"]
    },
    "types": ["vitest/globals"]
  },
  "references": [
    {"path": "../../packages/@sanity/color/tsconfig.dist.json"},
    {"path": "../../packages/@sanity/icons/tsconfig.dist.json"},
    {"path": "../../packages/@sanity/logos/tsconfig.dist.json"},
    {"path": "../../packages/@sanity/ui/tsconfig.dist.json"},
    {"path": "../../packages/@sanity/ui-workshop/tsconfig.dist.json"}
  ]
}
