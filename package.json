{
  "private": true,
  "name": "sanity-design",
  "license": "MIT",
  "scripts": {
    "build": "lerna run --scope @sanity/* build",
    "build-and-start:perf-app": "(cd perf/app && yarn build && yarn start)",
    "build-and-start:workshop": "(cd ui && yarn workshop:build && yarn workshop:start)",
    "dev": "run-p dev:docs dev:ui watch:packages",
    "dev:color": "lerna run --stream --scope @sanity/color dev",
    "dev:docs": "lerna run --stream --scope 'sanity-design-{docs,studio}' dev",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:example-web": "lerna run --stream --scope sanity-design-example-web dev",
    "dev:perf": "lerna run --stream --scope 'sanity-design-{perf-app,studio}' dev",
    "dev:ui": "lerna run --stream --scope @sanity/ui dev",
    "dev:studio": "lerna run --stream --scope sanity-design-studio dev",
    "postinstall": "yarn husky install",
    "release:latest": "lerna publish --dist-tag latest",
    "release:next": "lerna publish --canary --force-publish --no-git-tag-version --dist-tag next --preid next",
    "lint": "lerna run --stream --parallel lint",
    "test": "lerna run --stream --parallel test",
    "test:browser": "start-server-and-test 'yarn build-and-start:workshop' http://localhost:9009 'yarn test:cypress:run'",
    "test:cypress:open": "cypress open --config-file .cypress/cypress.json",
    "test:cypress:run": "cypress run --config-file .cypress/cypress.json",
    "test:perf": "start-server-and-test 'yarn build-and-start:perf-app' http://localhost:9001 'yarn test:perf:run'",
    "test:perf:run": "cd perf && node -r esbuild-register -r dotenv-flow/config lib/run.ts",
    "type-check": "lerna run --stream --parallel type-check",
    "watch:packages": "lerna run --stream --parallel --scope @sanity/* watch"
  },
  "devDependencies": {
    "@sanity/client": "^2.8.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.23",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "^15.0.2",
    "@types/prettier": "^2.2.3",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/react-is": "^17.0.0",
    "@types/react-test-renderer": "^17.0.1",
    "@types/uuid": "^8.3.0",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.1",
    "cpx": "^1.5.0",
    "cypress": "^7.2.0",
    "cypress-real-events": "^1.4.0",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.11.19",
    "esbuild-register": "^2.5.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "globby": "^11.0.3",
    "http-server": "^0.12.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "puppeteer": "^9.1.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.12.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4",
    "uuid": "^8.3.2",
    "yargs": "^17.0.1"
  },
  "workspaces": [
    "color",
    "docs",
    "examples/*",
    "icons",
    "logos",
    "perf/app",
    "studio",
    "tools/*",
    "ui"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
