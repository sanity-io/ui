{
  "private": true,
  "name": "sanity-design",
  "version": "1.0.0-alpha.0",
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "build:packages": "lerna run --scope @sanity/* build",
    "dev": "run-p dev:docs dev:storybook watch:packages",
    "dev:color": "lerna run --stream --scope @sanity/color dev",
    "dev:docs": "lerna run --stream --scope 'sanity-design-{docs,studio}' dev",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:example-web": "lerna run --stream --scope sanity-design-example-web dev",
    "dev:storybook": "lerna run --stream --scope sanity-ui-storybook dev",
    "dev:studio": "lerna run --stream --scope sanity-design-studio dev",
    "release": "lerna publish --no-private --dist-tag latest",
    "release:beta": "lerna publish --no-private --dist-tag next",
    "lint": "lerna run --stream --parallel lint",
    "test": "lerna run --stream --parallel test",
    "test:browser": "start-server-and-test dev:storybook http://localhost:9009 test:qawolf",
    "test:qawolf": "qawolf test --headless",
    "test:qawolf:create": "qawolf create http://localhost:9009",
    "type-check": "lerna run --stream --parallel type-check",
    "watch:packages": "lerna run --stream --parallel --scope @sanity/* watch"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.15",
    "@types/jest-axe": "^3.5.1",
    "@types/prettier": "^2.1.5",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-is": "^17.0.0",
    "@types/react-test-renderer": "^17.0.0",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "qawolf": "^1.6.0",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.11.6",
    "react-test-renderer": "^17.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2"
  },
  "workspaces": [
    "color",
    "docs",
    "examples/*",
    "icons",
    "logos",
    "studio",
    "ui",
    "ui-storybook"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint type-check test"
    }
  }
}
