{
  "private": true,
  "name": "sanity-design",
  "license": "MIT",
  "scripts": {
    "build": "lerna run --scope @sanity/* build",
    "build:workshop": "lerna run --scope sanity-ui-workshop build",
    "clean": "rimraf build && lerna run clean",
    "dev": "run-p dev:docs dev:ui watch:packages",
    "dev:docs": "lerna run --stream --scope 'sanity-design-{docs,studio}' dev",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:example-web": "lerna run --stream --scope sanity-design-example-web dev",
    "dev:studio": "lerna run --stream --scope sanity-design-studio dev",
    "dev:ui": "lerna run --stream --scope sanity-ui-workshop dev",
    "etl": "cd scripts/etl && node -r dotenv-flow/config -r esbuild-register main",
    "generate": "lerna run generate",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "yarn husky install",
    "release:dryrun": "yarn build && ./scripts/publish/dryrun",
    "release:latest": "yarn build && lerna publish --dist-tag latest",
    "release:next": "yarn build && lerna publish --canary --force-publish --no-git-tag-version --dist-tag=next --preid=next --exact",
    "start:workshop": "lerna run --scope sanity-ui-workshop start",
    "test": "jest",
    "test:browser": "start-server-and-test 'run-s build:workshop start:workshop' http://localhost:9009 'cypress run'",
    "type-check": "tsc --build",
    "watch:packages": "lerna run --stream --parallel --scope @sanity/* watch"
  },
  "devDependencies": {
    "@sanity/client": "^3.3.6",
    "@sanity/pkg-utils": "^1.6.0",
    "@sanity/tsdoc-to-portable-text": "^0.4.1",
    "@types/jest": "^29.0.0",
    "@types/jest-axe": "^3.5.4",
    "@types/node": "^18.7.15",
    "@types/prettier": "^2.7.0",
    "@types/react": "^17.0.49",
    "@types/react-dom": "^17.0.17",
    "@types/react-is": "^17.0.3",
    "@types/react-test-renderer": "^17.0.2",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "cac": "^6.7.14",
    "chalk": "^5.0.1",
    "cpx": "^1.5.0",
    "cypress": "^10.7.0",
    "cypress-real-events": "^1.7.1",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.15.7",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.7",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globby": "^11.1.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "jest": "^29.0.2",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^29.0.2",
    "kill-port": "^1.6.1",
    "lerna": "^5.5.0",
    "lint-staged": "^13.0.3",
    "mkdirp": "^1.0.4",
    "npm-cli-login": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.8.2",
    "uuid": "^8.3.2",
    "verdaccio": "^5.15.3",
    "yargs": "^17.5.1"
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/@sanity/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
