{
  "private": true,
  "name": "sanity-design",
  "license": "MIT",
  "scripts": {
    "build": "lerna run --scope @sanity/* build",
    "build:workshop": "lerna run --scope sanity-ui-workshop build",
    "check:packages": "lerna run --scope @sanity/* check:package",
    "clean": "rimraf build && lerna run clean",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "dev": "run-p dev:ui",
    "dev:cypress": "run-p dev:ui cypress:open",
    "dev:docs": "lerna run --stream --scope sanity-design-docs dev",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:example-web": "lerna run --stream --scope sanity-design-example-web dev",
    "dev:ui": "lerna run --stream --scope sanity-ui-workshop dev",
    "etl": "cd scripts/etl && node -r dotenv-flow/config -r esbuild-register main",
    "generate": "lerna run generate",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "postinstall": "yarn husky install",
    "release:dryrun": "yarn build && ./scripts/publish/dryrun",
    "release:latest": "yarn build && lerna publish --dist-tag latest",
    "release:next": "yarn build && lerna publish --canary --force-publish --no-git-tag-version --dist-tag=next --preid=next --exact",
    "start:workshop": "lerna run --scope sanity-ui-workshop start",
    "test": "jest",
    "test:browser": "start-server-and-test 'run-s build:workshop start:workshop' http://localhost:9009 'run-s cypress:run'",
    "type-check": "tsc --build",
    "watch:packages": "lerna run --stream --parallel --scope @sanity/* watch"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@sanity/client": "^3.4.1",
    "@sanity/pkg-utils": "^1.12.0",
    "@sanity/tsdoc-to-portable-text": "^0.4.1",
    "@testing-library/dom": "^8.18.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.1.2",
    "@types/jest-axe": "^3.5.5",
    "@types/node": "^18.8.3",
    "@types/prettier": "^2.7.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-is": "^17.0.3",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^8.3.4",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitejs/plugin-react": "^2.1.0",
    "babel-jest": "^29.1.2",
    "cac": "^6.7.14",
    "chalk": "^4.1.2",
    "cpx": "^1.5.0",
    "cypress": "^10.9.0",
    "cypress-real-events": "^1.7.1",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.15.10",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globby": "^11.1.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "jest-axe": "^6.0.0",
    "jest-environment-jsdom": "^29.1.2",
    "kill-port": "^1.6.1",
    "lerna": "^5.6.1",
    "lint-staged": "^13.0.3",
    "mkdirp": "^1.0.4",
    "npm-cli-login": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.8.4",
    "verdaccio": "^5.15.4",
    "yargs": "^17.6.0"
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/@sanity/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
