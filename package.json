{
  "private": true,
  "name": "sanity-design",
  "license": "MIT",
  "scripts": {
    "build": "lerna run --scope @sanity/* build",
    "build-and-start:workshop": "(cd packages/@sanity/ui && yarn workshop:build && yarn workshop:start)",
    "clean": "lerna run clean",
    "dev": "run-p dev:docs dev:ui watch:packages",
    "dev:docs": "lerna run --stream --scope 'sanity-design-{docs,studio}' dev",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:example-web": "lerna run --stream --scope sanity-design-example-web dev",
    "dev:ui": "lerna run --stream --scope @sanity/ui dev",
    "dev:studio": "lerna run --stream --scope sanity-design-studio dev",
    "extract:tsdoc-to-portable-text": "node -r esbuild-register scripts/extract_tsdoc-to-portable-text.ts",
    "generate": "lerna run generate",
    "postinstall": "yarn husky install",
    "release:dryrun": "yarn build && ./scripts/publish_dryrun",
    "release:latest": "yarn build && lerna publish --dist-tag latest",
    "release:next": "yarn build && lerna publish --canary --force-publish --no-git-tag-version --dist-tag next --preid next",
    "lint": "lerna run --stream --parallel lint",
    "test": "lerna run --stream --parallel test",
    "test:browser": "start-server-and-test 'yarn build-and-start:workshop' http://localhost:9009 'yarn test:cypress:run'",
    "test:cypress:open": "cypress open --config-file .cypress/cypress.json",
    "test:cypress:run": "cypress run --config-file .cypress/cypress.json",
    "type-check": "lerna run --stream --parallel type-check",
    "watch:packages": "lerna run --stream --parallel --scope @sanity/* watch"
  },
  "devDependencies": {
    "@sanity/client": "^2.10.5",
    "@sanity/tsdoc-to-portable-text": "0.1.1",
    "@testing-library/dom": "^7.31.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "^15.6.1",
    "@types/prettier": "^2.2.3",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/react-is": "^17.0.0",
    "@types/react-test-renderer": "^17.0.1",
    "@types/uuid": "^8.3.0",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.1",
    "cpx": "^1.5.0",
    "cypress": "^7.4.0",
    "cypress-real-events": "^1.5.0",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.12.5",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^2.5.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "globby": "^11.0.3",
    "http-server": "^0.12.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-axe": "^5.0.0",
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "npm-cli-login": "^0.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "puppeteer": "^9.1.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.12.3",
    "typescript": "^4.3.2",
    "uuid": "^8.3.2",
    "verdaccio": "^5.1.0",
    "yargs": "^17.0.1"
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/@sanity/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
