{
  "name": "@sanity/ui",
  "version": "0.37.13",
  "sideEffects": false,
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "require": "./lib/sanity-ui.js",
      "default": "./lib/sanity-ui.modern.mjs"
    }
  },
  "main": "./lib/sanity-ui.js",
  "module": "./lib/sanity-ui.module.js",
  "types": "./lib/dts/src/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "license": "MIT",
  "scripts": {
    "build": "run-s build:microbundle",
    "build:microbundle": "microbundle --format modern,esm,cjs --jsx React.createElement --jsxFragment React.Fragment --jsxImportSource react --no-compress --tsconfig tsconfig.lib.json",
    "clean": "rimraf lib",
    "lint": "eslint . --ext .js,.jsx,.mjs,.ts,.tsx --quiet",
    "prebuild": "yarn clean",
    "test": "jest",
    "type-check": "tsc --build",
    "watch": "run-p watch:*",
    "watch:cjs": "tsc --preserveWatchOutput -w --module CommonJS --outDir lib/cjs --project tsconfig.lib.json --rootDir src --target ES5",
    "watch:es": "tsc --preserveWatchOutput -w --module ES6 --outDir lib/esm --project tsconfig.lib.json --rootDir src --target ES6"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.4.0",
    "@popperjs/core": "^2.11.6",
    "@reach/auto-id": "^0.17.0",
    "@sanity/color": "^2.1.12",
    "@sanity/icons": "^1.3.2",
    "framer-motion": "6.3.0",
    "popper-max-size-modifier": "^0.2.0",
    "react-is": "^17.0.2",
    "react-popper": "^2.3.0",
    "react-refractor": "^2.1.7"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@types/refractor": "^3.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.5"
  },
  "peerDependencies": {
    "react": "^16.9 || ^17 || ^18",
    "react-dom": "^16.9 || ^17 || ^18",
    "styled-components": "^5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-io/design.git"
  },
  "bugs": {
    "url": "https://github.com/sanity-io/design/issues"
  },
  "keywords": [
    "sanity",
    "ui",
    "components"
  ],
  "author": "Sanity.io <hello@sanity.io>",
  "homepage": "https://www.sanity.io/",
  "publishConfig": {
    "access": "public"
  }
}
