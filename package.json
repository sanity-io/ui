{
  "private": true,
  "name": "sanity-design",
  "license": "MIT",
  "scripts": {
    "build": "lerna run --scope @sanity/* build",
    "build:workshop": "lerna run --scope sanity-ui-workshop build",
    "clean": "lerna run clean",
    "dev": "run-p dev:docs dev:ui watch:packages",
    "dev:docs": "lerna run --stream --scope 'sanity-design-{docs,studio}' dev",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:example-web": "lerna run --stream --scope sanity-design-example-web dev",
    "dev:ui": "lerna run --stream --scope sanity-ui-workshop dev",
    "dev:studio": "lerna run --stream --scope sanity-design-studio dev",
    "extract": "run-s extract:*",
    "extract:tsdoc-to-portable-text": "cd scripts/extract && node -r dotenv-flow/config -r esbuild-register tsdoc-to-portable-text.ts",
    "generate": "lerna run generate",
    "postinstall": "yarn husky install",
    "release:dryrun": "yarn build && ./scripts/publish/dryrun",
    "release:latest": "yarn build && lerna publish --dist-tag latest",
    "release:next": "yarn build && lerna publish --canary --force-publish --no-git-tag-version --dist-tag=next --preid=next --exact",
    "lint": "lerna run --stream --parallel lint",
    "start:workshop": "lerna run --scope sanity-ui-workshop start",
    "test": "lerna run --stream --parallel test",
    "test:browser": "start-server-and-test 'run-s build:workshop start:workshop' http://localhost:9009 'yarn test:cypress:run'",
    "test:cypress:open": "cypress open --config-file .cypress/cypress.json",
    "test:cypress:run": "cypress run --config-file .cypress/cypress.json",
    "type-check": "lerna run --stream --parallel type-check",
    "watch:packages": "lerna run --stream --parallel --scope @sanity/* watch"
  },
  "devDependencies": {
    "@sanity/client": "^2.21.7",
    "@sanity/tsdoc-to-portable-text": "^0.1.12",
    "@types/jest": "^27.0.2",
    "@types/jest-axe": "^3.5.3",
    "@types/node": "^16.11.6",
    "@types/prettier": "^2.4.1",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/react-is": "^17.0.3",
    "@types/react-test-renderer": "^17.0.1",
    "@types/styled-components": "^5.1.15",
    "@types/uuid": "^8.3.1",
    "@types/yargs": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "chalk": "^4.1.2",
    "cpx": "^1.5.0",
    "cypress": "^8.7.0",
    "cypress-real-events": "^1.5.1",
    "dotenv-flow": "^3.2.0",
    "esbuild": "^0.13.10",
    "esbuild-jest": "^0.5.0",
    "esbuild-register": "^3.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "globby": "^11.0.4",
    "http-server": "^14.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-axe": "^5.0.1",
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.6",
    "mkdirp": "^1.0.4",
    "npm-cli-login": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "typescript": "^4.4.4",
    "uuid": "^8.3.2",
    "verdaccio": "^5.2.0",
    "yargs": "^17.2.1"
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/@sanity/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
