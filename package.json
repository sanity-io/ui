{
  "private": true,
  "name": "sanity-design",
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "build:packages": "lerna run --scope @sanity/* build",
    "build-and-start:perf-app": "(cd perf/app && yarn build && yarn start)",
    "dev": "run-p dev:docs dev:ui watch:packages",
    "dev:color": "lerna run --stream --scope @sanity/color dev",
    "dev:docs": "lerna run --stream --scope 'sanity-design-{docs,studio}' dev",
    "dev:example-manage": "lerna run --stream --scope sanity-design-example-manage dev",
    "dev:example-studio": "lerna run --stream --scope sanity-design-example-studio dev",
    "dev:example-web": "lerna run --stream --scope sanity-design-example-web dev",
    "dev:perf": "lerna run --stream --scope 'sanity-design-{perf-app,studio}' dev",
    "dev:ui": "lerna run --stream --scope @sanity/ui dev",
    "dev:studio": "lerna run --stream --scope sanity-design-studio dev",
    "postinstall": "yarn husky install",
    "release:latest": "lerna publish --dist-tag latest",
    "release:next": "lerna publish --canary --no-git-tag-version --dist-tag next --preid next",
    "lint": "lerna run --stream --parallel lint",
    "test": "lerna run --stream --parallel test",
    "test:browser": "start-server-and-test dev:ui http://localhost:9009 test:qawolf",
    "test:qawolf": "qawolf test --headless",
    "test:perf": "start-server-and-test build-and-start:perf-app http://localhost:9001 test:perf:run",
    "test:perf:run": "(cd perf && ts-node -r dotenv-flow/config lib/run.ts)",
    "type-check": "lerna run --stream --parallel type-check",
    "watch:packages": "lerna run --stream --parallel --scope @sanity/* watch"
  },
  "devDependencies": {
    "@sanity/client": "^2.2.6",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "^14.14.25",
    "@types/prettier": "^2.2.1",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.0",
    "@types/react-is": "^17.0.0",
    "@types/react-test-renderer": "^17.0.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.0",
    "dotenv-flow": "^3.2.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "puppeteer": "^7.0.4",
    "qawolf": "^2.2.0",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.12.0",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "uuid": "^8.3.2"
  },
  "workspaces": [
    "color",
    "docs",
    "examples/*",
    "icons",
    "logos",
    "perf/app",
    "studio",
    "ui"
  ]
}
