{
  "extends": "./tsconfig.settings",
  "include": ["./exports", "./package.json", "./src", "./typings"],
  "exclude": [
    "./src/**/__fixtures__",
    "./src/**/__mocks__",
    "./src/**/__workshop__",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": false,
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@sanity/ui/*": ["./exports/*.ts"],
      "@sanity/ui": ["./exports/index.ts"]
    }
  }
}
