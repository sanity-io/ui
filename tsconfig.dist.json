{
  "extends": "./tsconfig.settings",
  "include": ["./src", "./typings"],
  "exclude": [
    "./dist",
    "./src/**/__fixtures__",
    "./src/**/__mocks__",
    "./src/**/__workshop__",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./dist",
    "jsx": "react-jsx"
  }
}
